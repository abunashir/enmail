#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'
set -vx

########################################
#      Installing required gems...     #
########################################

bundle install

########################################
#       Generating Open PGP keys       #
#             with GnuPG...            #
########################################

bundle exec rake generate_pgp_keys

########################################
#          Validating setup...         #
#     (tests should pass as long as    #
#            they do in CI)            #
########################################

bundle exec rspec
